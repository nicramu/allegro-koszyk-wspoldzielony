{
  "manifest_version": 3,
  "name": "Koszyk współdzielony Allegro",
  "version": "1.7",
  "description": "Dziel się przedmiotami w koszyku Allegro ze znajomymi.",
  "browser_specific_settings": {
    "gecko": {
      "id": "koszyk-wspoldzielony-allegro@nicramu"
    }
  },
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "*://*.allegro.pl/*",
    "https://pl.wiktionary.org/*"
  ],
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "web_accessible_resources": [
    {
      "resources": [
        "icons/*.svg",
        "inject.html",
        "style.css",
        "inject.js",
        "pageScript.js"
      ],
      "matches": [
        "*://*.allegro.pl/*"
      ]
    }
  ],
  "content_scripts": [
    {
      "matches": [
        "*://*.allegro.pl/koszyk*"
      ],
      "js": [
        "inject.js"
      ],
      "css": [
        "style.css"
      ],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png"
  }
}